<%-include('../includes/head.ejs')%>
  <link rel="stylesheet" href="/css/forms.css" />
</head>
<body>
  <%- include('../includes/navigation.ejs') %>
  <main>
    <form action="/admin/<%if (editing){%>edit-product<%}else{%>add-product<%}%>" method="POST" class="product-form">
      <div class="form-control">
        <label for="title"> Title</label>
        <input
          type="text"
          name="title"
          id="title"
          autocomplete="off"
          value="<% if (editing) {%><%=product.title%><%}%>"
        />
      </div>
      <div class="form-control">
        <label for="imageUrl"> Image URL</label>
        <input
          type="text"
          name="imageUrl"
          id="imageUrl"
          autocomplete="off"
          value="<% if (editing) {%><%=product.imageUrl%><%}%>"
        />
      </div>
      <div class="form-control">
        <label for="price"> Price</label>
        <input
          type="number"
          step="0.01"
          name="price"
          id="price"
          autocomplete="off"
          value="<% if (editing) {%><%=product.price%><%}%>"        />
      </div>
      <div class="form-control">
        <label for="description"> Description</label>
        <textarea
          name="description"
          id="description"
          rows="5"
          autocomplete="off"><% if (editing) {%><%=product.description%><%}%></textarea>
      </div>
      <% if (editing) { %>
        <input type="hidden" name="productId" value="<%=product.id%>"/>
      <% } %>
      <button type="submit">
        <% if (editing) { %>
          Update product
        <% }else{ %>
          Add product
        <% } %>  
      </button>
    </form>
  </main>
<%- include('../includes/end.ejs')%>
