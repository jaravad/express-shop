<%-include('../includes/head.ejs')%>
  <link rel="stylesheet" href="/css/forms.css" />
</head>
<body>
  <%- include('../includes/navigation.ejs') %>
  <main>
    <form action="/admin/add-product" method="POST" class="product-form">
      <div class="form-control">
        <label for="title"> Title</label>
        <input type="text" name="title" id="title" autocomplete="off" />
      </div>
      <div class="form-control">
        <label for="imageUrl"> Image URL</label>
        <input type="text" name="imageUrl" id="imageUrl" autocomplete="off" />
      </div>
      <div class="form-control">
        <label for="price"> Price</label>
        <input type="number" step="0.01" name="price" id="price" autocomplete="off" />
      </div>
      <div class="form-control">
        <label for="description"> Description</label>
        <textarea name="description" id="description" rows="5" autocomplete="off"></textarea>
      </div>
      <button type="submit">Add product</button>
    </form>
  </main>
<%- include('../includes/end.ejs')%>
